@model QuizNetASPKolo.Models.QuizSummaryViewModel
@{
    ViewData["Title"] = "QuizSummary";
}

<h1>QuizSummary</h1>

<h2>Congratulations! You had @Model.CorrectAnswers (@Model.PercentageCorrect%) answers right!</h2>

@for (int i = 0; i < Model.Questions.Count; i++)
{
    <div>
        <h4>@Model.Questions[i].Text</h4>

        <ul class="list-group">
            @for (int j = 0; j < Model.Questions[i].Answers.Length; j++)
			{
			    <li class="list-group-item @Model.ClassNamesForAnswer(i, j)">@Model.Questions[i].Answers[j].Text</li>
			}
        </ul>
    </div>
}

<a class="btn btn-primary" asp-controller="Questions" asp-action="GetAll">Return to questions</a>