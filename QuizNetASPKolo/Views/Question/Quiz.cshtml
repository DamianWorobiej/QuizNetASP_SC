@model List<QuizNetASPKolo.BusinessLogic.DTOs.QuestionDto>
@{
    ViewData["Title"] = "Quiz";
}

<h1>Generated Quiz</h1>

<br />
@foreach (var question in Model)
{
    <h3>@question.Text</h3>

    <ul class="list-group">
        @foreach (var answer in question.Answers)
        {
            <li class="list-group-item">
                @answer.Text
            </li>
        }
    </ul>

}