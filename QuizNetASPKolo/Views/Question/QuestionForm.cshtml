@model QuizNetDataAccess.Models.Question
@{
    ViewData["Title"] = "QuestionForm";
}

<h1>Question Form</h1>

<form method="post" asp-controller="Question" asp-action="Save">
    <input type="hidden" asp-for="Id"/>
    Question text:
    <input class="form-control" asp-for="Text" />
    <div class="form-check">
        Answers 1:
        <input class="form-control" asp-for="Answers[0].Text" />

        Answers 2:
        <input class="form-control" asp-for="Answers[1].Text" />

        Answers 3:
        <input class="form-control" asp-for="Answers[2].Text" />

        Answers 4:
        <input class="form-control" asp-for="Answers[3].Text" />
    </div>

    <div>
        <h3>Which answer is correct?</h3>
        <div class="form-check">
            <input class="form-check-input" id="option1" type="radio" value="0" asp-for="CorrectAnswerIndex" />
            <label class="form-check-label" for="option1">Answer 1</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" id="option2" type="radio" value="1" asp-for="CorrectAnswerIndex" />
            <label class="form-check-label" for="option2">Answer 2</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" id="option3" type="radio" value="2" asp-for="CorrectAnswerIndex" />
            <label class="form-check-label" for="option3">Answer 3</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" id="option4" type="radio" value="3" asp-for="CorrectAnswerIndex" />
            <label class="form-check-label" for="option4">Answer 4</label>
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
</form>